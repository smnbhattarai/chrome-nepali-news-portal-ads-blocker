{
  "name": "Nepali News Portal - Ad Blocker",
  "version": "0.0.1",
  "description": "Block ads displayed on various Nepali News Portal sites",
  "manifest_version": 3,
  "author": "Suman Bhattarai",
  "action": {
    "default_popup": "index.html",
    "default_title": "Nepali News Portal - Ad Blocker"
  },
  "content_scripts": [
    {
      "matches": ["https://www.onlinekhabar.com/*"],
      "js": ["js/ok.js"]
    },
    {
      "matches": ["https://www.setopati.com/*"],
      "js": ["js/sp.js"]
    }
  ],
  "permissions": ["activeTab"],
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
